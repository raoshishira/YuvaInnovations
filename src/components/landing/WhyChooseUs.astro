---
import { getLangFromUrl, useTranslations } from "../../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section id="whychoose" class="relative overflow-hidden bg-slate-100">
	<div class="mx-auto px-8 py-12 md:px-12 lg:py-24 2xl:max-w-7xl">
		<div class="mb-12 text-center">
			<div class="mb-6 inline-flex items-center justify-center gap-4">
				<div class="h-1 w-20 bg-stone-900"></div>
				<span class="text-xs font-semibold uppercase tracking-wide text-stone-600">
					{t("whychoose.badge")}
				</span>
				<div class="h-1 w-20 bg-stone-900"></div>
			</div>
			<h2 class="font-display text-4xl font-semibold text-stone-900 lg:text-6xl">
				{t("whychoose.title")}
			</h2>
			<p class="mx-auto mt-4 max-w-3xl text-lg text-stone-600">
				{t("whychoose.subtitle")}
			</p>
		</div>

		<div class="grid grid-cols-1 gap-6 md:grid-cols-2 lg:grid-cols-3 lg:gap-8">
			<!-- Reason 1 -->
			<div
				class="group relative rounded-3xl border border-stone-200 bg-white p-8 transition-all duration-300 hover:border-stone-900 hover:shadow-lg">
				<div class="relative">
					<div
						class="mb-6 flex h-14 w-14 items-center justify-center rounded-2xl bg-stone-900 transition-transform duration-300 group-hover:scale-110">
						<span class="text-2xl text-white">✔</span>
					</div>
					<h3 class="mb-3 text-xl font-semibold text-stone-900">
						{t("whychoose.reason1.title")}
					</h3>
					<p class="leading-relaxed text-stone-600">
						{t("whychoose.reason1.desc")}
					</p>
				</div>
			</div>

			<!-- Reason 2 -->
			<div
				class="group relative rounded-3xl border border-stone-200 bg-white p-8 transition-all duration-300 hover:border-stone-900 hover:shadow-lg">
				<div class="relative">
					<div
						class="mb-6 flex h-14 w-14 items-center justify-center rounded-2xl bg-stone-900 transition-transform duration-300 group-hover:scale-110">
						<span class="text-2xl text-white">✔</span>
					</div>
					<h3 class="mb-3 text-xl font-semibold text-stone-900">
						{t("whychoose.reason2.title")}
					</h3>
					<p class="leading-relaxed text-stone-600">
						{t("whychoose.reason2.desc")}
					</p>
				</div>
			</div>

			<!-- Reason 3 -->
			<div
				class="group relative rounded-3xl border border-stone-200 bg-white p-8 transition-all duration-300 hover:border-stone-900 hover:shadow-lg">
				<div class="relative">
					<div
						class="mb-6 flex h-14 w-14 items-center justify-center rounded-2xl bg-stone-900 transition-transform duration-300 group-hover:scale-110">
						<span class="text-2xl text-white">✔</span>
					</div>
					<h3 class="mb-3 text-xl font-semibold text-stone-900">
						{t("whychoose.reason3.title")}
					</h3>
					<p class="leading-relaxed text-stone-600">
						{t("whychoose.reason3.desc")}
					</p>
				</div>
			</div>

			<!-- Reason 4 -->
			<div
